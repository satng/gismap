{
  "compilerOptions": {
    "baseUrl": ".",
    "jsx": "react",
    "paths": {
      "@src/*": [
        "src/*"
      ],
      "@modules/*": [
        "node_modules/*"
      ],
      "@page/*": [
        "src/page/*"
      ],
    },
    "target": "ES6",
    "module": "commonjs",
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}